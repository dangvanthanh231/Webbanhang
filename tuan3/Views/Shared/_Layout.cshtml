
@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ELECTRONICS SHOP</title>
    
    <link rel="shortcut icon" href="~/images/favicon.png" type="image/x-icon"/>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<style>

    /*blog*/
    .blog-image {
        witdh: 150px;
        height: 150px;
    }

    .container-fluid {
        background-color: black;
    }

    body {
        background-color: powderblue;
    }

    .footer {
        background-color: burlywood; /* Màu nền của footer */
        color: #fff; /* Màu chữ của footer */
        padding: 20px; /* Khoảng cách bên trong của footer */
    }

    .container-footer {
        background-color: #759167;
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }
        /*Footer*/
        .container-footer .col-md-8 {
            width: 60%; /* Chiều rộng của cột 8 */
        }

        .container-footer .col-md-4 {
            width: 40%; /* Chiều rộng của cột 4 */
            text-align: right; /* Căn chỉnh về phía phải */
        }

        .container-footer h4 {
            margin-bottom: 20px; /* Khoảng cách dưới của tiêu đề */
        }

        .container-footer p {
            margin-bottom: 10px; /* Khoảng cách dưới của các đoạn văn bản */
        }

    .full-screen-image img {
        width: 100%; /* Chiều rộng của hình ảnh là 100% */
        height: 100%; /* Chiều cao của hình ảnh là 100% */
        object-fit: cover;

    /*Product*/
    .thumbnail {
        overflow: hidden; /* Ẩn phần bên ngoài của ảnh khi zoom */
    }

        .thumbnail img {
            transition: transform 0.3s ease; /* Thêm hiệu ứng chuyển đổi khi zoom */
        }

        .thumbnail:hover img {
            transform: scale(1.2); /* Phóng to ảnh lên 120% khi hover */
            animation: zoom-in 0.3s ease;
        }

    /*lLogin*/

    .panel-heading {
        background-color: black;
    }

    /*index product*/
    .panel-info.panel-prod {
        border-radius: 30px;
    }

    .panel-heading.panel-heading-prod {
        background-color: darkslateblue; /* Màu nền */
        color: #fff; /* Màu chữ */
        padding: 10px 15px; /* Khoảng cách giữa viền và nội dung */
        border-radius: 20px; /* Độ cong của các góc */
    }

        .panel-heading.panel-heading-prod i {
            margin-right: 5px; /* Khoảng cách giữa biểu tượng và nội dung */
        }
</style>
<body>
    <script src="js/site.js"></script>
    <div class="header">
        <div class="container">
            <img src="~/images/banner1.png" alt="ELECTRONIC SHOP" alt="Full Screen Image">

          <div class="container">
                
            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
                        <div class="collapse navbar-collapse" id="myNavbar">
                            <ul class="nav navbar-nav">
                                <li><a href="trang-chu">Trang chủ</a></li>
                                <li><a href="san-pham">Sản phẩm</a></li>
                                <li><a href="bai-viet">Bài viết</a></li>
                                <li><a href="lien-he">Liên hệ </a></li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    string username = User.Identity.Name;
                                    string permission = User.FindFirst(ClaimTypes.Role)?.Value;
                                    if (permission == "1")
                                    {
                                        <li>
                                            <a href="quan-tri">
                                                <span class="glyphicon glyphicon-cog"></span> Quản trị
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="gio-hang">
                                                <span class="glyphicon glyphicon-shopping-cart"></span> Giỏ hàng
                                            </a>
                                        </li>
                                    }
                                    
                                    <li>
                                        <a href="thong-tin">
                                            <span class="glyphicon glyphicon-user"></span> Thông tin
                                            @username
                                        </a>
                                    </li>
                                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                                }
                                else
                                {
                                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                                    <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                                }
                            </ul>
                        </div>
                
              </div>
            </nav>
          </div>
        </div>
    </div>

    
  
    <div class="content">
      <div class="container">
        <div class="col-md-9">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    
            </div>
                @RenderBody()
        </div>
           
        <div class="col-md-3">                
          <div class="panel panel-success panel-post">
            <div class="panel-heading panel-heading-prod"><i class="fa fa-paper-plane"></i> Quảng cáo</div>
            <div class="panel-body panel-body-post">
              <img src="https://th.bing.com/th/id/OIP.WNpnbXUUQLWChoHwbPUnBQHaHc?w=497&h=500&rs=1&pid=ImgDetMain" class="img-rounded img-adv"alt="Quảng cáo"/>
              <marquee>Hãy luôn chăm sóc tốt nhất cho máy của bạn</marquee>
            </div>
          </div>

          <div class="youtube">
                    <iframe width="110%" height="200" src="https://www.facebook.com/plugins/video.php?height=314&href=https%3A%2F%2Fwww.facebook.com%2Fastarmedia.vn%2Fvideos%2F536795817863229%2F&show_text=false&width=560&t=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
          </div>

          <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.4206985418705!2d106.78253487570396!3d10.855572157727538!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175276e7ea103df%3A0xb6cf10bb7d719327!2zSFVURUNIIC0gxJDhuqFpIGjhu41jIEPDtG5nIG5naOG7hyBUUC5IQ00gKFRodSBEdWMgQ2FtcHVzKQ!5e0!3m2!1svi!2s!4v1710172843840!5m2!1svi!2s" width="110%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>



    <div class="footer">
      <div class="container container-footer">
        <div class="col-md-8">
          <h4>ELECTRONICS SHOP - Cửa hàng điện tử</h4>
          <p>Địa chỉ: HUTECH Thuduc Campus - Khu CNC, Phường Hiệp Phú, Tp. Thử Đức, Tp. Hồ chí Minh</p>
          <p>SĐT: <a class="info" href="tel:0868895261">098.9999.888</a> (Adim)</p>
          <p>Email: <a class="info" href="mailto: 9988@gmail.com">9988@gmail.com</a></p>
        </div>
      </div>
    </div>

    

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
