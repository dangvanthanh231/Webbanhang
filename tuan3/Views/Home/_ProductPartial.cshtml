@model WebsiteBanHang.ViewModels.HomeViewModel
<ul class="list-group" width="100%">
    <li class="list-group-item active">Loại sản phẩm</li>
    <li class="list-group-item">
        <a class="nav-link" href="@Model.DesktopCateProds.Link-@Model.DesktopCateProds.IdCat" target="_blank">Laptop</a>
    </li>
    <li class="list-group-item">
        <a class="nav-link" href="@Model.LaptopCateProds.Link- @Model.LaptopCateProds.IdCat" target="_blank">Máy tính</a>
    </li>
</ul>


    <div class="panel-body">
        <div class="row">
            @foreach (var item in Model.LaptopProds)
            {
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img style="height:200px" src="~/images/products/@item.Img1" class="img-rounded"
                             alt="@item.NamePro">
                        <div class="caption">
                            <h4>@item.NamePro</h4>
                            <p>Giá: @string.Format("{0:N0}", item.Price) VNĐ</p>
                            <p>
                                <a href="san-pham/@item.Link-@item.IdPro" class="btn btn-info" role="button"><i class="fa fa-rocket"></i> Chi tiết</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    



    <div class="panel-body">
        <div class="row">
            @foreach (var item in Model.DesktopProds)
            {
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img style="height:200px" src="~/images/products/@item.Img1" class="img-rounded"
                             alt="@item.NamePro">
                        <div class="caption">
                            <h4>@item.NamePro</h4>
                            <p>Giá: @string.Format("{0:N0}", item.Price) VNĐ</p>
                            <p>
                                <a href="san-pham/@item.Link-@item.IdPro" class="btn btn-info" role="button"><i class="fa fa-rocket"></i> Chi tiết</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
  
